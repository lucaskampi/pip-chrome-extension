{
  "manifest_version": 3,
  "name": "Kampi's Picture-in-Picture",
  "description": "Request Picture-in-Picture for HTML5 video on pages (non-DRM).",
  "version": "0.1.2",
  "short_name": "Kampi's PiP",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kampi's PiP"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Trigger PiP on first video"
    }
  }
}
